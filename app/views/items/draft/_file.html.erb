<li class="media my-3 p-3 border">
  <%= image_tag file.url, alt: 'Preview Image', width:'120', height: '120', class: 'mr-3 img-fluid img-thumbnail' %>
  <div class="media-body">
    <div class="pull-right">
      <%= link_to item_file_path(@draft_item, file), method: :delete, remote: true, class: 'btn btn-secondary' do %>
        <%= fa_icon 'times' %>
        <%= t('remove') %>
      <% end %>
    </div>
    <h5><%=file.filename %></h5>
    <p><%= number_to_human_size(file.byte_size) %></p>
  </div>
</li>
