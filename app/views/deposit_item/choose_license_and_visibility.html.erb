<% page_title( t('.header')) %>

<%= render partial: 'progress_bar' %>

<h2 class="mt-3"><%= t('.header') %></h2>

<form>
  <fieldset class="my-3">
    <legend>
      <span class="text-danger">*</span>
      <%= t('.license.header') %>
    </legend>

    <div id="license-accordion" role="tablist">
      <div class="card">
        <div class="card-header" role="tab" id="headingMostCommon">
          <h5 class="mb-0">
            <a data-toggle="collapse" href="#collapseMostCommon" aria-expanded="true" aria-controls="collapseMostCommon">
              <%= t('.license.most_commonly_used') %>
              <%= fa_icon "minus", class: "js-more-less pull-right" %>
            </a>
          </h5>
        </div>

        <div id="collapseMostCommon" class="collapse show" role="tabpanel" aria-labelledby="headingMostCommon" data-parent="#license-accordion">
          <div class="card-body">
            <div class="form-check">
              <label class="form-check-label">
                <%= radio_button_tag 'license', 'attribution_noncommercial', true, class: 'form-check-input' %>
                <%= t('.license.attribution_noncommercial_html') %>
              </label>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header" role="tab" id="headingOtherCCLicenses">
          <h5 class="mb-0">
            <a data-toggle="collapse" href="#collapseOtherCCLicenses" aria-expanded="false" aria-controls="collapseOtherCCLicenses">
              <%= t('.license.other_creative_commons_licenses') %>
              <%= fa_icon "plus", class: "js-more-less pull-right" %>
            </a>
          </h5>
        </div>

        <div id="collapseOtherCCLicenses" class="collapse" role="tabpanel" aria-labelledby="headingOtherCCLicenses" data-parent="#license-accordion">
          <div class="card-body">

            <div class="form-check">
              <label class="form-check-label">
                <%= radio_button_tag 'license', 'attribution', false, class: 'form-check-input' %>
                <%= t('.license.attribution_html') %>
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <%= radio_button_tag 'license', 'attribution_noncommercial_noderivatives', false, class: 'form-check-input' %>
                <%= t('.license.attribution_noncommercial_noderivatives_html') %>
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <%= radio_button_tag 'license', 'attribution_noncommercial_sharealike', false, class: 'form-check-input' %>
                <%= t('.license.attribution_noncommercial_sharealike_html') %>
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <%= radio_button_tag 'license', 'attribution_noderivatives', false, class: 'form-check-input' %>
                <%= t('.license.attribution_noderivatives_html') %>
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <%= radio_button_tag 'license', 'attribution_sharealike', false, class: 'form-check-input' %>
                <%= t('.license.attribution_sharealike_html') %>
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <%= radio_button_tag 'license', 'cco_universal', false, class: 'form-check-input' %>
                <%= t('.license.cco_universal_html') %>
              </label>
            </div>

          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header" role="tab" id="headingPublicDomain">
          <h5 class="mb-0">
            <a data-toggle="collapse" href="#collapsePublicDomain" aria-expanded="false" aria-controls="collapsePublicDomain">
              <%= t('.license.public_domain') %>
              <%= fa_icon "plus", class: "js-more-less pull-right" %>
            </a>
          </h5>
        </div>

        <div id="collapsePublicDomain" class="collapse" role="tabpanel" aria-labelledby="headingPublicDomain" data-parent="#license-accordion">
          <div class="card-body">
            <div class="form-check">
              <label class="form-check-label">
                <%= radio_button_tag 'license', 'public_domain_mark', false, class: 'form-check-input' %>
                <%= t('.license.public_domain_mark_html') %>
              </label>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header" role="tab" id="headingLinkToAnotherLicense">
          <h5 class="mb-0">
            <a data-toggle="collapse" href="#collapseLinkToAnotherLicense" aria-expanded="false" aria-controls="collapseLinkToAnotherLicense">
              <%= t('.license.link_to_another_license') %>
              <%= fa_icon "plus", class: "js-more-less pull-right" %>
            </a>
          </h5>
        </div>

        <div id="collapseLinkToAnotherLicense" class="collapse" role="tabpanel" aria-labelledby="headingLinkToAnotherLicense" data-parent="#license-accordion">
          <div class="card-body">

            <div class="form-check">
              <label class="form-check-label">
                <%= radio_button_tag 'license', 'license_text_or_url', false, class: 'form-check-input' %>
                <%= t('.license.license_text_or_url') %>
              </label>
            </div>
            <div class="form-group">
              <textarea name="" id="" cols="30" rows="5" placeholder="Copy/paste the URL or license" class="form-control"></textarea>
            </div>
          </div>
        </div>
      </div>
    </div>
    <small class="form-text text-muted">
      <%= t('.license.help_html') %>
    </small>
  </fieldset>
  <fieldset class="my-3">
    <legend>
      <span class="text-danger">*</span>
      <%= t('.visibility.header') %>
    </legend>
    <div class="form-check">
      <label class="form-check-label">
        <%= radio_button_tag 'visibility', 'public', true, class: 'form-check-input' %>
        <%= t('.visibility.public') %>
      </label>
    </div>
    <div class="form-check">
      <label class="form-check-label">
        <%= radio_button_tag 'visibility', 'embargo', false, class: 'form-check-input' %>
        <%= t('.visibility.embargo') %>
      </label>
      <div class="d-md-flex justify-content-between">
        <%= date_select('item', 'embargo_date',
                        { order: [:year, :month, :day],
                          prompt: { day: t('select_a_day'),
                                    month: t('select_a_month'),
                                    year: t('select_a_year')
                                  },
                          start_year: Date.today.year
                        }, { class: 'form-control  mr-2 mb-2' }) %>
      </div>
    </div>
    <div class="form-check disabled">
      <label class="form-check-label">
        <%= radio_button_tag 'visibility', 'authenticated', false, class: 'form-check-input', disabled: true %>
        <%= t('.visibility.authenticated') %>
      </label>
    </div>
    <div class="form-check disabled">
      <label class="form-check-label">
        <%= radio_button_tag 'visibility', 'authenticated', false, class: 'form-check-input', disabled: true %>
        <%= t('.visibility.private') %>
      </label>
    </div>
  </fieldset>

</form>
<%= link_to 'Previous', previous_wizard_path, class: 'btn btn-secondary' %>
<%= link_to 'Save and Continue', next_wizard_path, class: 'btn btn-primary' %>
