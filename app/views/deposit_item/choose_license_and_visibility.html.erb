<% page_title( t('.header')) %>

<%= render partial: 'progress_bar' %>

<h2 class="mt-3"><%= t('.header') %></h2>

<form>
  <fieldset>
    <legend>
      <span class="text-danger">*</span>
      License
    </legend>
    <p>Most commonly used</p>
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" value="option1" checked>
        Attribution-NonCommercial 4.0 International  (CC BY-NC 4.0)
      </label>
    </div>
    <p>Other Creative Commons Licenses</p>
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" value="option2">
        Attribution 4.0 International  ([CC BY 4.0])
      </label>
    </div>
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" value="option3">
        Attribution-NonCommercial-NoDerivatives 4.0 International  ([CC BY-NC-ND 4.0])
      </label>
    </div>
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" value="option3">
        Attribution-NonCommercial-ShareAlike 4.0 International  ([CC BY-NC-SA 4.0]
      </label>
    </div>
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" value="option3">
        Attribution-NoDerivatives 4.0 International  ([CC BY-ND 4.0])
      </label>
    </div>
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" value="option3">
        Attribution-ShareAlike 4.0 International  ([CC BY-SA 4.0])
      </label>
    </div>
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" value="option3">
        CC0 1.0 Universal ([CC0 1.0])
      </label>
    </div>
    <p>This work is in the public domain</p>
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" value="option3">
        Public Domain Mark 1.0
      </label>
    </div>
    <p>I'm required to use / link to another license</p>
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" value="option3">
        License text / URL
      </label>
    </div>
    <div class="form-group">
      <textarea name="" id="" cols="30" rows="5" placeholder="Copy/paste the URL or license"></textarea>
    </div>
  </fieldset>
  <fieldset>
    <legend>
      <span class="text-danger">*</span>
      Visibility
    </legend>
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
        Open Access Now (Will be seen by everyone)
      </label>
    </div>
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
        Will be open access on:
        <div class="d-md-flex justify-content-between">
          <%= date_select('item', 'embargo_date',  { order: [:year, :month, :day],  prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }}, {class: 'form-control  mr-2 mb-2'}) %>
        </div>
      </label>
    </div>
    <div class="form-check disabled">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3" disabled>
        CCID Protected
      </label>
    </div>
    <div class="form-check disabled">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3" disabled>
        Private
      </label>
    </div>
  </fieldset>

</form>
<%= link_to 'Previous', previous_wizard_path, class: 'btn btn-secondary' %>
<%= link_to 'Save and Continue', next_wizard_path, class: 'btn btn-primary' %>
