<% page_title( t('.header')) %>

<%= render partial: 'progress_bar' %>

<h2 class="mt-3"><%= t('.header') %></h2>

<form>
  <fieldset class="my-3">
    <legend>
      <span class="text-danger">*</span>
      License
    </legend>

    <div id="license-accordion" role="tablist">
      <div class="card">
        <div class="card-header" role="tab" id="headingMostCommon">
          <h5 class="mb-0">
            <a data-toggle="collapse" href="#collapseMostCommon" aria-expanded="true" aria-controls="collapseMostCommon">
              Most commonly used
              <%= fa_icon "minus", class: "js-more-less pull-right" %>
            </a>
          </h5>
        </div>

        <div id="collapseMostCommon" class="collapse show" role="tabpanel" aria-labelledby="headingMostCommon" data-parent="#license-accordion">
          <div class="card-body">

            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="radio" value="option1" checked>
                Attribution-NonCommercial 4.0 International  (<a href="">CC BY-NC 4.0</a>)
              </label>
            </div>

          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header" role="tab" id="headingOtherCCLicenses">
          <h5 class="mb-0">
            <a data-toggle="collapse" href="#collapseOtherCCLicenses" aria-expanded="false" aria-controls="collapseOtherCCLicenses">
              Other Creative Commons Licenses
              <%= fa_icon "plus", class: "js-more-less pull-right" %>
            </a>
          </h5>
        </div>

        <div id="collapseOtherCCLicenses" class="collapse" role="tabpanel" aria-labelledby="headingOtherCCLicenses" data-parent="#license-accordion">
          <div class="card-body">

            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="radio" value="option2">
                Attribution 4.0 International  (<a href="">CC BY 4.0</a>)
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="radio" value="option3">
                Attribution-NonCommercial-NoDerivatives 4.0 International  (<a href="">CC BY-NC-ND 4.0</a>)
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="radio" value="option3">
                Attribution-NonCommercial-ShareAlike 4.0 International  (<a href="">CC BY-NC-SA 4.0</a>)
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="radio" value="option3">
                Attribution-NoDerivatives 4.0 International  (<a href="">CC BY-ND 4.0</a>)
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="radio" value="option3">
                Attribution-ShareAlike 4.0 International  (<a href="">CC BY-SA 4.0</a>)
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="radio" value="option3">
                CC0 1.0 Universal (<a href="">CC0 1.0</a>)
              </label>
            </div>

          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header" role="tab" id="headingPublicDomain">
          <h5 class="mb-0">
            <a data-toggle="collapse" href="#collapsePublicDomain" aria-expanded="false" aria-controls="collapsePublicDomain">
              This work is in the public domain
              <%= fa_icon "plus", class: "js-more-less pull-right" %>
            </a>
          </h5>
        </div>

        <div id="collapsePublicDomain" class="collapse" role="tabpanel" aria-labelledby="headingPublicDomain" data-parent="#license-accordion">
          <div class="card-body">
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="radio" value="option3">
                Public Domain Mark 1.0
              </label>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header" role="tab" id="headingLinkToAnotherLicense">
          <h5 class="mb-0">
            <a data-toggle="collapse" href="#collapseLinkToAnotherLicense" aria-expanded="false" aria-controls="collapseLinkToAnotherLicense">
              I'm required to use / link to another license
              <%= fa_icon "plus", class: "js-more-less pull-right" %>
            </a>
          </h5>
        </div>

        <div id="collapseLinkToAnotherLicense" class="collapse" role="tabpanel" aria-labelledby="headingLinkToAnotherLicense" data-parent="#license-accordion">
          <div class="card-body">

            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="radio" value="option3">
                License text / URL
              </label>
            </div>
            <div class="form-group">
              <textarea name="" id="" cols="30" rows="5" placeholder="Copy/paste the URL or license" class="form-control"></textarea>
            </div>

          </div>
        </div>
      </div>
    </div>
    <small class="form-text text-muted">
      Your item will be hosted in an open access environment. Please select one of the licenses described below. For additional assistance selecting a license please see http://creativecommons.org/choose/, or contact erahelp@ualberta.ca.
    </small>
  </fieldset>
  <fieldset class="my-3">
    <legend>
      <span class="text-danger">*</span>
      Visibility
    </legend>
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
        Open Access Now (Will be seen by everyone)
      </label>
    </div>
    <div class="form-check">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
        Will be open access on:
      </label>
      <div class="d-md-flex justify-content-between">
        <%= date_select('item', 'embargo_date',  { order: [:year, :month, :day],  prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }}, {class: 'form-control  mr-2 mb-2'}) %>
      </div>
    </div>
    <div class="form-check disabled">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3" disabled>
        CCID Protected
      </label>
    </div>
    <div class="form-check disabled">
      <label class="form-check-label">
        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3" disabled>
        Private
      </label>
    </div>
  </fieldset>

</form>
<%= link_to 'Previous', previous_wizard_path, class: 'btn btn-secondary' %>
<%= link_to 'Save and Continue', next_wizard_path, class: 'btn btn-primary' %>
